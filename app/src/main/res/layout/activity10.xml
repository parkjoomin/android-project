<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FDE8E1">

    <ImageView
        android:id="@+id/imageView12"
        android:layout_width="356dp"
        android:layout_height="550dp"
        android:layout_marginStart="84dp"
        android:layout_marginBottom="220dp"
        android:rotation="-150"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/airplane1" />

    <ImageView
        android:id="@+id/imageView13"
        android:layout_width="273dp"
        android:layout_height="429dp"
        android:layout_marginTop="360dp"
        android:layout_marginEnd="150dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/train2" />

    <ImageView
        android:id="@+id/imageView14"
        android:layout_width="415dp"
        android:layout_height="400dp"
        android:layout_marginBottom="155dp"
        android:alpha="0.6"
        android:rotation="8"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/heart" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="420dp"
        android:layout_height="88dp"
        android:layout_marginTop="157dp"
        android:background="#E2D89999"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:text="예상 경비"
        android:textColor="#FDFCFC"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="427dp"
        android:layout_height="38dp"
        android:layout_marginTop="120dp"
        android:background="#CDC4C7DD"
        android:gravity="center"
        android:text="제주도는 비행기, 나머지는 기차로 가정합니다."
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="427dp"
        android:layout_height="38dp"
        android:layout_marginTop="4dp"
        android:background="#CDC4C7DD"
        android:gravity="center"
        android:text="모든 출발지를 광명역으로 가정합니다."
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.25"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="427dp"
        android:layout_height="38dp"
        android:layout_marginTop="5dp"
        android:background="#CDC4C7DD"
        android:gravity="center"
        android:text="표값은 편도로 계산합니다."
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/button2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.437"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="427dp"
        android:layout_height="38dp"
        android:layout_marginTop="4dp"
        android:background="#CDC4C7DD"
        android:gravity="center"
        android:text="성수기와 비성수기는 차등하여 계산합니다."
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <Button
        android:id="@+id/button2"
        android:layout_width="135dp"
        android:layout_height="65dp"
        android:layout_marginEnd="14dp"
        android:backgroundTint="#3F4B8C"
        android:text="메인 화면"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>