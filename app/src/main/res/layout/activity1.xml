<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C7DAFB"
    tools:context=".Activity1">

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="366dp"
        android:layout_height="429dp"
        android:layout_marginStart="72dp"
        android:layout_marginBottom="264dp"
        android:rotation="-160"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/airplane1" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="387dp"
        android:layout_height="348dp"
        android:layout_marginTop="384dp"
        android:layout_marginEnd="44dp"
        android:background="@android:color/transparent"
        android:backgroundTint="@android:color/transparent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/train2" />

    <ImageView
        android:id="@+id/imageView20"
        android:layout_width="80dp"
        android:layout_height="84dp"
        android:layout_marginTop="400dp"
        android:layout_marginEnd="325dp"
        android:alpha="0.8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/heart3" />

    <ImageView
        android:id="@+id/imageView22"
        android:layout_width="77dp"
        android:layout_height="81dp"
        android:layout_marginTop="184dp"
        android:layout_marginEnd="324dp"
        android:alpha="0.8"
        android:rotation="16"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/heart3" />

    <ImageView
        android:id="@+id/imageView21"
        android:layout_width="79dp"
        android:layout_height="57dp"
        android:layout_marginStart="312dp"
        android:layout_marginTop="300dp"
        android:alpha="0.8"
        android:rotation="80"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/heart3" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="46dp"
        android:background="#CB8FA6A4"
        android:fontFamily="serif"
        android:padding="5dp"
        android:text="휴가철 여행지를 못 고르시겠나요?"
        android:textAlignment="center"
        android:textColor="#111B1A"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView28"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:background="#CB8FA6A4"
        android:fontFamily="serif"
        android:padding="5dp"
        android:text="취향에 맞는 여행지를 추천해드릴게요!"
        android:textAlignment="center"
        android:textColor="#111B1A"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView1" />

    <Button
        android:id="@+id/button1"
        android:layout_width="263dp"
        android:layout_height="90dp"
        android:layout_marginTop="44dp"
        android:backgroundTint="#C58E8B"
        android:fontFamily="sans-serif-medium"
        android:text="국내 여행지\n추천 받으러 가기"
        android:textColor="#FBF6F6"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.709"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView28" />

    <Button
        android:id="@+id/button13"
        android:layout_width="263dp"
        android:layout_height="90dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="#636FBA"
        android:text="한국관광공사 홈페이지\n방문하러 가기"
        android:textColor="#FAFBFF"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.709"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button14" />

    <Button
        android:id="@+id/button14"
        android:layout_width="263dp"
        android:layout_height="85dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="#E69C84"
        android:text="여행 경비 알아보러 가기"
        android:textColor="#FDF6F6"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.256"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button1" />


</androidx.constraintlayout.widget.ConstraintLayout>